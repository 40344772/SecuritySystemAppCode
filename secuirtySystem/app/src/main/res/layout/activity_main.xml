<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ArmButton"
        android:layout_width="181dp"
        android:layout_height="58dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="115dp"
        android:text="@string/arm_system"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/padUnlocked"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/padUnlocked"
        android:layout_width="196dp"
        android:layout_height="257dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="117dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ArmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padlock_unlocked"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/padLocked"
        android:layout_width="198dp"
        android:layout_height="257dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="117dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ArmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/padlock_locked"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="179dp"
        android:layout_height="56dp"
        android:layout_marginTop="116dp"
        android:text="Device Has been tripped"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/padUnlocked"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>